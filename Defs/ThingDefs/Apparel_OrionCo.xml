<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- ============= Stuff-less apparel =================-->

	<ThingDef ParentName="ApparelBase_GT">
		<defName>Apparel_OCCombatVest</defName>
		<label>Orion Combat vest</label>
		<description>A standard issue Orion Corporation combat vest. Equiped with more advanced alloys then your usual vest.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/FlakVest/FlakVest</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<MarketValue>800</MarketValue>
			<Mass>1</Mass>
			<ArmorRating_Blunt>0.40</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.80</ArmorRating_Sharp>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.02</MoveSpeed>
		</equippedStatOffsets>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<generateCommonality>1</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/VestPlate/VestPlate</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>OCArmor</li>
			</tags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>6</weight>
					<only>RGBA(0.6,0.6,1,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

	<ThingDef ParentName="ApparelBase_GT">
		<defName>Apparel_OCHelmet</defName>
		<label>Orion Corporation helmet</label> 
		<description>A standard issue Orion Corporation helmet. Other then the characteristic Orion blue, it is made of more advanced materials then the standard helmet.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/AdvancedHelmet/AdvancedHelmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<MarketValue>700</MarketValue>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.35</ArmorRating_Sharp>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.02</MoveSpeed>
			<PsychicSensitivity>-0.45</PsychicSensitivity>
		</equippedStatOffsets>
		<thingCategories>
			<li>Apparel</li>
		</thingCategories>
		<generateCommonality>1</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/AdvancedHelmet/AdvancedHelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>OCArmor</li>
			</tags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>6</weight>
					<only>RGBA(0.6,0.6,1,1)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

